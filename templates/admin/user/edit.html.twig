        <div class="col">
            <h1>Edit User</h1>

            <div class="d-flex justify-content-between align-items-center my-3">
                <div>
                    <a class="btn btn-outline-primary" href="{{ path('app_admin_user_index') }}" hx-boost="true">Back to list</a>
