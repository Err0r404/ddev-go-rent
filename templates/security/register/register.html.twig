{% extends 'security/base.html.twig' %}

{% block title %}{{ parent() }} â€“ Register{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'w-75 m-auto', 'hx-post': path('app_register'), 'hx-target': 'body'}}) }}
    <h3 class="text-center fw-normal mb-5">Register</h3>

    {{ form_errors(form) }}

    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <div class="my-5 d-grid gap-3">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
    </div>

    <p class="text-center">
        You already have an account? <a href="{{ path('app_login') }}" hx-boost="true" class="link-dark">Login here</a>
    </p>

    {{ form_end(form) }}
{% endblock %}
